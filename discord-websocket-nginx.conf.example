# Swag specific Nginx Configuration for Discord WebSocket
# Place this in: /path/to/swag/config/nginx/proxy-confs/discord-websocket.conf

# Upstream to the WSS proxy inside the Kasm container
# The Discord bot WebSocket server runs on port 8765 in the container
# Nginx on 192.168.50.63 reverse-proxies to 192.168.50.63:8765
upstream discord_websocket {
    server 192.168.50.63:8765;  # Discord WebSocket on Kasm container (port 8765, WSS)
}

# Upstream to the Plex API HTTP proxy inside the Kasm container
# HTTP API server runs on port 8080 in the container, exposed as 18585 on host
upstream plex_api_proxy {
    server 192.168.50.63:18585;  # Plex API HTTP proxy on Kasm container host (port 18585)
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name discord.f00d4tehg0dz.me www.discord.f00d4tehg0dz.me;

    # SSL configuration (handled by Swag)
    include /config/nginx/ssl.conf;

    # Client max body size
    client_max_body_size 0;

    # Discord WebSocket endpoint
    location /discord {
        # WebSocket proxy settings (proxying to WSS endpoint)
        proxy_pass https://discord_websocket;
        proxy_http_version 1.1;

        # WebSocket upgrade headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # SSL verification for self-signed certificate in container
        proxy_ssl_verify off;
        proxy_ssl_verify_depth 1;
        proxy_ssl_session_reuse on;

        # WebSocket timeouts (long-lived connections)
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_connect_timeout 60s;

        # Disable buffering for WebSocket
        proxy_buffering off;
    }

    # Plex API HTTP proxy endpoint
    location /plex-api/ {
        # Proxy to the Plex API HTTP server inside the container
        # NOTE: Trailing slash in location and proxy_pass ensures proper path handling
        proxy_pass http://plex_api_proxy/;
        proxy_http_version 1.1;

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # HTTP timeouts (standard requests, not long-lived)
        proxy_read_timeout 70s;
        proxy_send_timeout 70s;
        proxy_connect_timeout 60s;

        # Enable buffering for HTTP
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }

    # Health check endpoint
    location / {
        access_log off;
        return 200 "Discord WebSocket Proxy Online\n";
        add_header Content-Type text/plain;
    }
}

# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name discord.f00d4tehg0dz.me www.discord.f00d4tehg0dz.me;
    return 301 https://$server_name$request_uri;
}
